									}
								],
								"body": {
									"mode": "raw",
									"raw": "{\n  \"project_id\": \"my-rag-project\",\n  \"collection_name\": \"docs\",\n  \"query_vector\": {{generated_embedding}},\n  \"top_k\": 5\n}"
								},
								"url": {
									"raw": "{{base_url}}/vdb/search",
